{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
      {
        "name": "back-log-volume",
        "host": {
          "sourcePath": "/var/app/back/logs"
        }
      },
      {
        "name": "front-log-volume",
        "host": {
          "sourcePath": "/var/app/front/logs"
        }
      }
    ],
    "containerDefinitions": [
      {
        "name": "back", 
        "image": "851725643716.dkr.ecr.us-east-1.amazonaws.com/tictactoe_back",
        "essential": true,
        "memory": 512,
        "mountPoints": [
          {
            "sourceVolume": "back-log-volume",
            "containerPath": "/usr/src/app/logs",
            "readOnly": false
          }
        ],
        "portMappings": [
          {
            "hostPort": 8080,
            "containerPort": 8080
          }
        ]
      },
      {
        "name": "front",
        "image": "851725643716.dkr.ecr.us-east-1.amazonaws.com/tictactoe_front",
        "essential": true,
        "memory": 512,
        "mountPoints": [
          {
            "sourceVolume": "front-log-volume",
            "containerPath": "/usr/src/app/logs",
            "readOnly": false
          }
        ],
        "portMappings": [
          {
            "hostPort": 3000,
            "containerPort": 3000
          }
        ],
        "links": [
          "back:back"
        ]
      }
    ]
  }
  
